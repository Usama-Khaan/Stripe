<p class="text-success text-center"><%= notice %></p>

<div class="container mt-4">
  <div class="card shadow">
    <div class="card-header bg-success text-white text-center">
      <h5><%= @book.title %></h5>
      <p class="small"><%= @book.author %></p>
    </div>
    <div class="card-body">
      <p class="card-text"><%= @book.description %></p>
      <p class="font-weight-bold text-success">$<%= @book.price %></p>
    </div>
    <div class="card-footer d-flex">
      <%= link_to "Edit this book", edit_book_path(@book), class: 'btn btn-warning me-2' %>
      <%= link_to "Back to books", books_path, class: 'btn btn-secondary me-2' %>
      <%= button_to "Destroy this book", @book, method: :delete, class: 'btn btn-danger', data: { confirm: "Are you sure?" } %>
    </div>
  </div>
</div>
